<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--toolbar 삽입-->
    <include
        android:id="@+id/include4"
        layout="@layout/toolbar" />


    <Button
        android:id="@+id/hotTopicWriteBtnIn"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/background"
        android:text="게시"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/hotTopicCancleBtn"
        app:layout_constraintTop_toBottomOf="@+id/include4" />

    <Button
        android:id="@+id/hotTopicCancleBtn"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="@color/background"
        android:text="취소"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include4" />

    <EditText
        android:id="@+id/edithotTopicTitle"
        android:layout_width="308dp"
        android:layout_height="28dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/edithotTopicContent"
        app:layout_constraintEnd_toEndOf="@+id/edithotTopicContent" />

    <EditText
        android:id="@+id/edithotTopicContent"
        android:layout_width="311dp"
        android:layout_height="226dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>